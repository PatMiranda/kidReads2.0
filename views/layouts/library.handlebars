<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles/styles.css" media="screen" title="no title" charset="utf-8">
  <title>Library</title>
</head>

<body>
    <main>


    
  <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide" style="background-image:url(images/pigeon.jpg)"><button class="btn btn-lg btn-primary" id="read-button">Read!</button></div>
            <div class="swiper-slide" style="background-image:url(images/mouse.jpg)"><button class="btn btn-lg btn-primary" id="read-button">Read!</button></div>
            <div class="swiper-slide" style="background-image:url(images/moon.jpg)"><button class="btn btn-lg btn-primary" id="read-button">Read!</button></div>
            <div class="swiper-slide" style="background-image: url(images/caterpillar.jpg"><button class="btn btn-lg btn-primary" id="read-button">Read!</button></div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>
    <!-- <div class="row library-buttons">
            <button class="read-button">Read!</button>
    </div> -->

    <div class="container" id="bookBackground" style= "background-image:url('images/bg.jpg')" display: "none">
        <div class="row">
            <div class="col-md-12">
                    <div id="readBook" class="flipbook">
                            <div class="hard" id="cover"></div>
                            <div class="hard" id="insideCover"></div>
                    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                    <button id="closeBook" class="btn btn-md btn-danger"><span class="fa fa-window-close"></span></button>
                    <button class="btn btn-large btn-success" id="prev"><span class="fa fa-arrow-circle-left"></span>Previous</button>
                    <button class="btn btn-large btn-success" id="nex">Next<span class="fa fa-arrow-circle-right"></span></button>
                    <button class="btn btn-md btn-success" id="restart"><span class="fas fa-undo"></span></button>
            </div>
        </div> 
    </div>


    <script src="swiper/dist/js/swiper.min.js"></script> 
    


       <script>

        var swiper = new Swiper('.swiper-container', {
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: 'auto',
        coverflowEffect: {
            rotate: 50,
            stretch: 0,
            depth: 100,
            modifier: 1,
            slideShadows : true,
        },
        pagination: {
            el: '.swiper-pagination',
        },
        });
    </script>

</main>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
